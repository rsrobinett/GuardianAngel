<header>
  <nav>
    <div class="nav-wrapper container">
      <a href="/" class="brand-logo"><i class="material-icons">cloud</i>Guardian Angel</a>
      <ul id="nav-mobile" class="right">
        <li><a href='/register' class="waves-effect waves-light btn">Register</a></li>
        <li><a href='/login' class="waves-effect waves-light btn">Login</a></li>
      </ul>
    </div>
  </nav>
</header>
<main>
  <div class="container">
    <div class="row">
      <form action="/login" method="POST" class="col l6 m6 s8 offset-l3 offset-m3 offset-s1">
        <div class="card-panel">
          <div class='row'>
            <div class='col s12'>
            <h5 class='center'>Welcome to Guardian Angel</h5>
            <p class="center">Please log into your account you click register to get started.</p>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">perm_identity</i>
              <input id='login-username' name="username" type="text" class="validate">
              <label for="login-username">Username</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <i class="material-icons prefix">lock_outline</i>
              <input id="login-password" name='password' type="password" class="validate">
              <label for="login-password">Password</label>
            </div>
            <div class="input-field col s12 center-align">
              <button class="btn waves-effect waves-light" type="submit">Log In
              </button>
            </div>
            <div class="input-field col s12 center-align">
              <p class='center-align'>Haven't Signed Up? <a href="#">Register</a></p>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</main>
